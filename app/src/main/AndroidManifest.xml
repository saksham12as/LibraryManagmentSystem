<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.librarymanagementsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LibraryManagementSystem">

        <!-- Main Activity (Launch Activity) with android:exported="true" -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add Book Activity -->
        <activity android:name=".AddBookActivity" />
        <activity android:name=".ViewBooksActivity" />
        <activity android:name=".BorrowBookActivity" />
        <activity android:name=".ManageBorrowersActivity" />

    </application>
</manifest>
